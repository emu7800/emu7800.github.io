                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PlayButtonVisibility}"
                                    Style="{StaticResource PlayButtonStyle}"/>
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"

                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>
            <controls:PivotItem Header="Activision" x:Name="pivotitemActivision">
                <ListBox x:Name="gamesActivision">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PlayButtonVisibility}"
                                    Style="{StaticResource PlayButtonStyle}"/>
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PauseButtonVisibility}"
                                    Style="{StaticResource PauseButtonStyle}"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource PhoneTextLargeStyle}" Text="{Binding Title}"/>
                                    <TextBlock Style="{StaticResource PhoneTextSmallStyle}" Text="{Binding TitleDetails}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>
            <controls:PivotItem Header="Imagic">
                <ListBox x:Name="gamesImagic">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PlayButtonVisibility}"
                                    Style="{StaticResource PlayButtonStyle}"/>
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PauseButtonVisibility}"
                                    Style="{StaticResource PauseButtonStyle}"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource PhoneTextLargeStyle}" Text="{Binding Title}"/>
                                    <TextBlock Style="{StaticResource PhoneTextSmallStyle}" Text="{Binding TitleDetails}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>
            <controls:PivotItem Header="Other">
                <ListBox x:Name="gamesOther">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PlayButtonVisibility}"
                                    Style="{StaticResource PlayButtonStyle}"/>
                                <Button Width="100" Height="100" BorderThickness="1" Tap="Button_Tap"
                                    Tag="{Binding}"
                                    Visibility="{Binding PauseButtonVisibility}"
                                    Style="{StaticResource PauseButtonStyle}"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource PhoneTextLargeStyle}" Text="{Binding Title}"/>
                                    <TextBlock Style="{StaticResource PhoneTextSmallStyle}" Text="{Binding TitleDetails}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>
        </controls:Pivot>
    </Grid>


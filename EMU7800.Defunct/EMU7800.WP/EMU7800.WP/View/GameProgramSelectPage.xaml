                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>
            <controls:PivotItem Header="Atari">
                <ListBox x:Name="gamesAtari">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
